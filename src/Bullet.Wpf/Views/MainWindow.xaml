<Window
    x:Class="Bullet.Wpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Bullet.Wpf"
    mc:Ignorable="d"
    FontSize="14"
    Title="Bullet v1.0.0"
    Height="750"
    Width="900">

    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="200" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <GroupBox
            Header="Connections"
            Margin="10"
            Padding="10"
            VerticalAlignment="Top">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal">

                    <StackPanel Style="{StaticResource FormGroup}">
                        <Label
                            Content="Url"
                            HorizontalAlignment="Left" />
                        <TextBox
                            Width="400"
                            Style="{StaticResource InputStyle}"
                            Text="{Binding Url}" />
                    </StackPanel>

                    <StackPanel Style="{StaticResource FormGroup}">
                        <Label Content="Connections:" />
                        <TextBox
                            Style="{StaticResource InputStyle}"
                            Text="{Binding NumberOfConnections}" />
                    </StackPanel>

                    <StackPanel Style="{StaticResource FormGroup}">
                        <Label Content="Durations in seconds" />
                        <TextBox
                            Style="{StaticResource InputStyle}"
                            Text="{Binding Duration}" />
                    </StackPanel>

                </StackPanel>


                <StackPanel
                    Grid.Row="1"
                    Margin="0,10">
                    <RadioButton
                        Content="Use optimazed number of threads"
                        IsChecked="{Binding UseOptimazedNumberOfThreads}"
                        Margin="0,5" />
                    <RadioButton
                        IsChecked="{Binding UseThreadPerConnection}"
                        Content="Use thread per connections" />
                </StackPanel>
                <StackPanel
                    Orientation="Horizontal"
                    Margin="0,0,0,0"
                    VerticalAlignment="Top"
                    Grid.Row="2">
                    <Button
                        Command="{Binding StartCommand}"
                        IsEnabled="{Binding IsNotBusy}"
                        Content="Start"
                        Width="200" />
                    <Button
                        Command="{Binding CancelCommand}"
                        IsEnabled="{Binding IsBusy}"
                        Margin="20,0,0,0"
                        Content="Cancel"
                        Width="100" />
                </StackPanel>

                <StackPanel Grid.Row="3">
                    <ProgressBar
                        Margin="0,10,0,0"
                        Height="10"
                        Value="{Binding Progress}" />
                    <TextBlock Text="{Binding Elapsed, StringFormat={}{0:N3}}" />
                </StackPanel>


            </Grid>

        </GroupBox>

        <GroupBox
            Margin="10"
            Padding="10"
            Header="Results"
            Grid.Row="1">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <local:ValueUC
                        Label="REQUESTS PER SECOND"
                        Hint="rps"
                        Value="{Binding RequestsPerSecond, StringFormat={}{0:N0}}" />

                    <local:ValueUC
                        Label="CONNECTIONS"
                        Value="{Binding Connections, StringFormat={}{0:N0}}" />
                </StackPanel>

                <StackPanel Grid.Column="1">

                    <local:ValueUC
                        Label="TOTAL REQUESTS"
                        Value="{Binding TotalRequest, StringFormat={}{0:N0}}" />
                    <local:ValueUC
                        Label="FAILED"
                        Foreground="Red"
                        Value="{Binding TotalFailedRequest, StringFormat={}{0:N0}}" />

                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox
            Grid.Row="2"
            Margin="10"
            Padding="0"
            Header="Log">

            <ListView
                x:Name="_logListView"
                Margin="10,10.5,9.5,10"
                IsSynchronizedWithCurrentItem="True"
                ItemsSource="{Binding Logs, IsAsync=True}"
                ScrollBar.Scroll="OnLogScroll">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">

                            <TextBlock Text="{Binding Time}" />

                            <TextBlock
                                Foreground="{Binding LevelColor}"
                                Text="{Binding Level}" />
                            <TextBlock
                                Foreground="YellowGreen"
                                Text="{Binding ThreadId}" />

                            <TextBlock
                                Margin="5,0,0,0"
                                Text="{Binding Log}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
        </GroupBox>

        <StatusBar Grid.Row="3">
            <StackPanel Orientation="Horizontal">
                <Label Content="Status:" />
            </StackPanel>
        </StatusBar>
    </Grid>
</Window>
